<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buy_food">

    <TextView
        android:id="@+id/item1"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:text="Pizza"
        android:textSize="28dp"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/price1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs. 150"
        android:textSize="24dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/item1"
        android:layout_marginLeft="30dp" />

    <EditText
        android:id="@+id/q1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="qty"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/price1"
        android:layout_marginLeft="35dp"
        />

    <Button
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="Buy"
        android:backgroundTint="#4CAF50"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/q1"
        android:layout_marginLeft="35dp"/>
        />

    <TextView
        android:id="@+id/item2"
        android:layout_width="85dp"
        android:layout_height="35dp"
        android:text="Burger"
        android:textSize="28dp"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/item1"/>

    <TextView
        android:id="@+id/price2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="35dp"
        android:layout_toEndOf="@+id/item1"

        android:text="Rs. 100"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/item1" />

    <EditText
        android:id="@+id/q2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="qty"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/price2"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/item1" />

    <Button
        android:id="@+id/b2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="Buy"
        android:backgroundTint="#4CAF50"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/q2"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/item1" />



    <TextView
        android:id="@+id/item3"
        android:layout_width="85dp"
        android:layout_height="35dp"
        android:text="Pasta"
        android:textSize="28dp"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/item2"/>

    <TextView
        android:id="@+id/price3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="35dp"
        android:layout_toEndOf="@+id/item1"
        android:text="Rs. 250"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/item2" />

    <EditText
        android:id="@+id/q3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="qty"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/price2"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/item2" />

    <Button
        android:id="@+id/b3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="Buy"
        android:backgroundTint="#4CAF50"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/q2"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/item2" />


    <TextView
        android:id="@+id/item4"
        android:layout_width="85dp"
        android:layout_height="35dp"
        android:text="Oreo Shake"
        android:textSize="16dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/item3"/>

    <TextView
        android:id="@+id/price4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="35dp"
        android:layout_toEndOf="@+id/item1"
        android:text="Rs. 200"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/item3" />

    <EditText
        android:id="@+id/q4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="qty"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/price2"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/item3" />

    <Button
        android:id="@+id/b4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="Buy"
        android:backgroundTint="#4CAF50"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/q2"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/item3" />



</RelativeLayout>