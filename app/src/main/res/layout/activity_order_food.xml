<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Order_food"

    >

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Order your food"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:textColor="#000000"
        android:background="#4CAF50"
        android:textSize="35dp"
        />

    <EditText
        android:id="@+id/et1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/t1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:hint="Full Name"
        android:background="#4CAF50"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/et1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:hint="Phone"
        android:maxLength="10"
        android:inputType="number"
        android:background="#4CAF50"
        />

    <EditText
        android:id="@+id/et3"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/et2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:hint="Address"
        android:inputType="textPersonName"
        android:background="#4CAF50"
        />

    <TextView
        android:id="@+id/t2"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_below="@+id/et3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:background="#4CAF50"
        android:gravity="center"
        android:text="Item1"
        android:textColor="#000000"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/s1"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_below="@+id/et3"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_toEndOf="@+id/t2"
        android:background="#4CAF50"
        android:entries="@array/item_name"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/et4"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_below="@+id/et3"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_toEndOf="@+id/s1"
        android:background="#4CAF50"
        android:gravity="center"
        android:hint="qty"
        android:inputType="number"
        android:maxLength="1"
        android:textColor="#000000"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/t3"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_below="@+id/s1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:background="#4CAF50"
        android:gravity="center"
        android:text="Item2"
        android:textColor="#000000"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/s2"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_below="@+id/s1"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_toEndOf="@+id/t2"
        android:background="#4CAF50"
        android:entries="@array/item_name"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/et5"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_below="@+id/s1"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_toEndOf="@+id/s1"
        android:background="#4CAF50"
        android:gravity="center"
        android:hint="qty"
        android:inputType="number"
        android:maxLength="1"
        android:textColor="#000000"
        android:textSize="25dp" />

    <Spinner
        android:id="@+id/s3"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_below="@+id/s2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:textColor="#000000"
        android:background="#4CAF50"
        android:entries="@array/payment"
        />

    <Button
        android:id="@+id/b1"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:text="Confirm Order"
        android:backgroundTint="#4CAF50"
        android:layout_below="@+id/s3"
        android:layout_marginTop="30dp"
        />

</RelativeLayout>